<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuFood">
    <RelativeLayout
        android:background="#8F8C91"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Food order"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:id="@+id/imgCart"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_local_grocery_store_black_24dp"
            android:layout_width="32dp"
            android:layout_height="32dp">
        </ImageView>
        <TextView
            android:id="@+id/tvcartCounter"
            android:layout_alignParentRight="true"
            android:text="0"
            android:padding="3dp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:background="@drawable/bordernumber"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:gravity="center_horizontal">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:padding="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/welcome"
            android:text="Welcome "
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/tvUserName"
            android:text="Diep"
            android:textSize="13dp"
            android:layout_toRightOf="@id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_toRightOf="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:text=", Click on item you want to order"
            android:layout_height="wrap_content"
            android:textSize="15dp">

        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:background="@drawable/borderlistview"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lvMenuFoodOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        
    </LinearLayout>
    <RelativeLayout
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:text="Total Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="0"
            android:textSize="15dp"
            android:layout_toLeftOf="@+id/dola"
            android:id="@+id/tvPriceCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dola"
            android:text="$"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnOrder"
        android:layout_margin="7dp"
        android:text="Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>
</LinearLayout>