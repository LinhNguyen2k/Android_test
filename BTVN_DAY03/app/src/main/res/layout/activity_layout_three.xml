<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#AEAAAB"
    tools:context=".layout_three">

    <LinearLayout
        android:background="#1D4ACF"
        android:id="@+id/Light"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        >
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:src="@drawable/three"
            />
        <TextView


            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Buttom_SingUpTop"
            android:textSize="@dimen/_17sdp"
            android:textColor="@color/text_color"

            />




    </LinearLayout>
    <TextView
        android:layout_below="@+id/Light"
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AEAAAB"
        android:padding="15dp"
        android:text="@string/Text_Tomorrow"/>

    <LinearLayout
        android:background="#E4E1E1"
        android:id="@+id/top1"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <ImageView
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/radius_clook"
            android:src="@drawable/clock" />
        <LinearLayout
          android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2">
            <TextView

                android:layout_weight="1"
                android:textSize="@dimen/_35sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00"/>
            <TextView
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVERY DAY"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="In 16 hours"></TextView>
        <Switch

            android:thumbTint="@color/color_switch"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/switchNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
        <ImageView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/more"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/_18sdp"/>



    </LinearLayout>
<LinearLayout
    android:id="@+id/LinLayout_mid"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_below="@+id/top1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_1sdp"
    android:background="#7C7778"
    android:orientation="horizontal"></LinearLayout>


    <LinearLayout
        android:background="#E4E1E1"
        android:id="@+id/top3"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top1"
        android:orientation="horizontal"
        android:weightSum="10"

        >

        <ImageView
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/radius_birthday"
            android:src="@drawable/birthday"
            android:backgroundTint="@color/colorAccent"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2"
            >
            <TextView

                android:layout_weight="1"
                android:textSize="@dimen/_35sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:15"/>
            <TextView
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friend's Birthday  "/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="In 1 day"></TextView>

        <Switch
            android:thumbTint="@color/color_switch"
            android:id="@+id/switchNew3"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_weight="1"
            android:checked="true" />
        <ImageView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/more"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/_18sdp"/>



    </LinearLayout>

    <TextView
        android:layout_below="@+id/top3"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AEAAAB"
        android:padding="15dp"
        android:text="Saturday"></TextView>
    <LinearLayout
        android:id="@+id/LinLayout_mid3"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#7C7778"></LinearLayout>



    <LinearLayout
        android:background="#E4E1E1"
        android:id="@+id/top2"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:orientation="horizontal"
        android:weightSum="10"

        >

        <ImageView
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/cafe"
            android:src="@drawable/food"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2"
            >
            <TextView

                android:layout_weight="1"
                android:textSize="@dimen/_35sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:30"/>
            <TextView
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVERY DAY"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="In 3 days"></TextView>
        <Switch


            android:thumbTint="@color/color_switch"
            android:layout_marginLeft="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/switchNew2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
        <ImageView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/more"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/_18sdp"/>



    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/radius_add"
        android:layout_margin="@dimen/_25sdp"></ImageView>

</RelativeLayout>