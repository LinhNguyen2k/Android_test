<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/anh06">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="#3A3A3A"></LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/TextLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="LoginApp"
        android:textColor="#00D2F6"
        android:textSize="40dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextLogin"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="70dp"
        android:alpha="0.6"
        android:background="@drawable/botron"
        android:hint="UserName..."
        android:paddingLeft="10dp"
        android:textColorHint="#FFFFFF"></EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:alpha="0.6"
        android:background="@drawable/botron"
        android:hint="PassWord..."
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#FFFFFF"></EditText>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:alpha="0.8"
        android:background="@drawable/login_radius"
        android:text="Login"
        android:textColor="#0C0C0C"></Button>

    <Button
        android:id="@+id/singup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:alpha="0.8"
        android:background="@drawable/singup"
        android:text="SINGUP"
        android:textColor="#F6F3F3"></Button>

    <RelativeLayout
        android:id="@+id/or01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/singup"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="OR"
            android:textColor="#FFFFFF"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/or"
            android:background="#FFFFFF"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/or"
            android:background="#FFFFFF"></TextView>
    </RelativeLayout>

    <Button
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or01"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:alpha="0.8"
        android:background="@drawable/phone"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:paddingLeft="20dp"
        android:text="PHONE"
        android:textColor="#F6F3F3" />

    <RelativeLayout
        android:id="@+id/facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone">
        <!--        <ImageView-->
        <!--            android:id="@+id/img"-->
        <!--            android:layout_width="24dp"-->
        <!--            android:layout_height="24dp"-->
        <!--            android:layout_marginTop="35dp"-->
        <!--            android:layout_marginLeft="50dp"-->
        <!--            -->
        <!--        ></ImageView>-->
        <Button
            android:id="@+id/facebook01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:alpha="0.8"
            android:background="@drawable/facebook"

            android:drawableLeft="@drawable/facebook01"
            android:paddingLeft="20dp"
            android:text="facebook"
            android:textColor="#F6F3F3"

            />

    </RelativeLayout>


</RelativeLayout>